#:kivy 1.9.0



<FloatLayout>:
    #This puts a rectangle the size of the window in the window and places it behind all other widgets, with a color determined by RGBA values
    #alternative to the apparently non-working Window.clearcolor call in our corresponding .py file
    
    #canvas.before:
    #    Color:
    #     rgba: 1, 1, 1, 1
    #    Rectangle:
    #        pos: self.pos
    #        size: self.size
    
    Image:
        source: 'testchart.png'
        size_hint: 0.55, 0.5
        pos_hint: {"top": 0.90, "right": 0.55}
        allow_stretch: True
        keep_ratio: False
    Image:
        source: "financial_data_cropped.png"
        size_hint: 0.40, 0.45
        pos_hint: {"top": 0.90, "right": 1}
        allow_stretch: True
        keep_ratio: False
    Image:
        source: "financial_data_cropped.png"
        size_hint: 0.40, 0.45
        pos_hint: {"top": 0.45, "right": 1}
        allow_stretch: True
        keep_ratio: False
    Button:
        text: "1d"
        size_hint: 0.05, 0.05
        pos_hint: {"top": 0.40, "right":.30}

    Button:
        text: "1mo"
        size_hint: 0.05, 0.05
        pos_hint: {"top": 0.40, "right":.35}
       
    Button:
        text: "6mo"
        size_hint: 0.05, 0.05
        pos_hint: {"top": 0.40, "right":.40}

    Button:
        text: "1yr"
        size_hint: 0.05, 0.05
        pos_hint: {"top": 0.40, "right":.45}
    Button:
        text: "5yr"
        size_hint: 0.05, 0.05
        pos_hint: {"top": 0.40, "right":.50}

    Button:
        text: "Max"
        size_hint: 0.05, 0.05
        pos_hint: {"top": 0.40, "right":.55}
    Button:
        text: "BUY STOCK"
        size_hint: 0.125, 0.05
        pos_hint: {"top": 0.35, "right":.125}
        color: 0, 0, 0, .85
        background_normal: ''
        background_color: .3, 1, .4, .85
        on_press: root.buyCallback()
    Button:
        text: "SELL STOCK"
        size_hint: 0.125, 0.05
        pos_hint: {"top": 0.35, "right":.25}
        color: 0, 0, 0, .85
        background_normal: ''
        background_color: 1, .3, .4, .85
        on_press: root.sellCallback()
    TextInput:
        id: "Purchase"
        pos_hint: {"top": 0.40, "right": .125}
        size_hint: 0.125, .05
    TextInput:
        id: "Sell"
        pos_hint: {"top": 0.40, "right": .25}
        size_hint: 0.125,0.05
    Label:
        text: "NEWS"
        pos_hint: {"top": 0.35, "right": 0.45}
        font_size: "20sp"
    Button:
        text: "Log In"
        size_hint: 0.1, 0.05
        pos_hint: {"top":.95}
        color: 0, 0, 0, .85
        background_normal: ''
        background_color: 0, 1, 0, .85
    TextInput:
        id: input
        hint_text: 'Search Here'
        pos_hint: {"top": .95, "right": 1}
        size_hint: 0.2, 0.05
    Button:
        text:"refresh"
        pos_hint: {"top": 0.20, "right": .55}
        size_hint: 0.05,0.05
    Button:
        text:"Link0"
        pos_hint: {"top": 0.15}
        size_hint: 0.55,0.05
    Button:
        text:"Link1"
        pos_hint: {"top": 0.10}
        size_hint: 0.55,0.05
    Button:
        text:"Link2"
        pos_hint: {"top": 0.05}
        size_hint: 0.55,0.05
    